{
  "manifest_version": 3,
  "name": "OpenClaw Snap",
  "description": "Capture screenshots with annotation and send to OpenClaw sessions.",
  "version": "0.1.0",
  "action": {"default_popup": "popup.html"},
  "permissions": ["tabs", "storage", "activeTab"],
  "host_permissions": ["http://*/","https://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
